{
  "compilerOptions": {
    "composite": false,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esNext",
    "module": "ESNext",
    "baseUrl": "./src",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@0x1luxa/utils": ["./index.ts"],
      "@0x1luxa/utils/web3": ["./utils/web3/index.ts"],
      "@0x1luxa/utils/common": ["./utils/common/index.ts"],
      "@0x1luxa/utils/date": ["./utils/date/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
